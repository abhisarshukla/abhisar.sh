---
import { getCollection } from "astro:content";
import FormattedDate from "./FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<ul>
    {
        posts.map((post) => (
            <li>
                <a
                    class="flex gap-5 border-b-[1px] text-zinc-800 border-zinc-800 border-dashed max-w-fit visited:border-indigo-800 visited:text-indigo-800"
                    href={`/blog/${post.id}/`}
                >
                    <p class="date">
                        <FormattedDate date={post.data.pubDate} />
                    </p>
                    &mdash;<h4 class="title">{post.data.title}</h4>
                </a>
            </li>
        ))
    }
</ul>
