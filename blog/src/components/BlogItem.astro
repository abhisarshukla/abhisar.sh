---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "./FormattedDate.astro";
import GradientCard from "./effects/GradientCard.astro";

export type Props = CollectionEntry<"blog">;

const {
    id,
    data: { title, description, pubDate },
} = Astro.props;

const pubDateString = pubDate.toLocaleDateString("en-us", {
    year: "numeric",
    month: "short",
    day: "numeric",
});
---

<GradientCard
    title={title}
    description={description}
    footer={pubDateString}
    href={`/blog/${id}`}
/>
